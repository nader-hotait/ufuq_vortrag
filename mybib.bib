@article{https://doi.org/10.1111/j.1467-6478.2004.00287.x,
author = {Levi, Michael and Wall, David S.},
title = {Technologies, Security, and Privacy in the Post-9/11 European Information Society},
journal = {Journal of Law and Society},
volume = {31},
